<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= TittleWB %>
    </title>
    <%- include('../partials/depend.ejs'); %>
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <div class="prop1 flex">
        <div class="prop1-top">
            <h1 style="margin-left: 95px;font-family: 'Nunito', sans-serif;">List Your Property</h1>
            <img src="img/pin.png" alt="">
            <form action="/listprop" method="POST">
                <div class="formProp flex">
                    <div class="mini-form flex">
                        <label for="name">Full Name:</label>
                        <input type="text" id="name" name="fullName" placeholder="Enter your full name" required>
                    </div>

                    <div class="mini-form flex">
                        <label for="mobile">Mobile Number:</label>
                        <input type="number" id="mobile" name="mobileNumber" placeholder="Enter your mobile number"
                            required>
                    </div>
                    <div class="mini-form flex">
                        <label for="city">City:</label>
                        <input type="text" id="city" name="city" placeholder="City" required>
                    </div>

                    <div class="mini-form flex">
                        <label for="pin">PIN:</label>
                        <input type="text" id="pin" name="pin" placeholder="PIN" required>
                    </div>

                    <div class="mini-form flex">
                        <label for="location">Nearby Location:</label>
                        <input type="text" id="location" name="location" placeholder="Nearby Location">
                    </div>

                    <div class="mini-form flex">
                        <label for="carpetArea">Carpet Area (in Sq feet):</label>
                        <input type="number" id="carpetArea" name="carpetArea" placeholder="Carpet area in Sq feet" >
                    </div>

                    <div class="mini-form flex">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Email">
                    </div>


                    <!-- Submit Button -->
                    <button type="submit" class="submit-btn">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../partials/footbar.ejs") %>
</body>
</html>